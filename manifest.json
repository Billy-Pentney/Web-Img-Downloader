{
	"manifest_version": 2,
	"name": "Web Image Downloader",
	"version": "1.0",

	"description": "Enables images to be downloaded from pages which otherwise prevent (or discourage) downloading. Currently supports: Pinterest, Instagram, Flickr, Artstation, DeviantArt, and YouTube thumbnails",

	"icons": {
		"48": "icons/v2/wid-48.png",
		"96": "icons/v2/wid-96.png"
	},
	
	"background": {
	  "scripts": ["background.js"],
	  "persistent": false,
	  "type": "module"
	},

    "content_scripts": [
		{
			"matches": [
				"*://*.artstation.com/*", 
				"*://*.flickr.com/*", 
				"*://*.pinterest.com/*", "*://*.pinterest.co.uk/*", 
				"*://*.instagram.com/*",
				"*://*.deviantart.com/*",
				"*://*.youtube.com/*"
			],
			"js": ["content_scripts/getsrc_any.js"]
		}
	],

	"permissions": [
		"downloads",
		"tabs",
		"contextMenus",
		"clipboardWrite",
		"*://*.pinterest.com/pin/*",
		"*://*.flickr.com/*",
		"*://*.instagram.com/*",
		"*://*.artstation.com/*",
		"*://*.youtube.com/*",
		"*://*.deviantart.com/*"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "billy.pentney@gmail.com",
			"strict_min_version": "48.0"
		}
	}

}
